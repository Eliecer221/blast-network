# BLAST Network Environment Variables
# Copia este archivo como .env y configura tus valores

# Configuración del Nodo
PORT=8545
CHAIN_ID=8888
NETWORK_ID=8888

# Configuración del Minero
MINER_WALLET=
MINER_THREADS=4
RPC_URL=http://localhost:8545

# Configuración del Explorador
EXPLORER_PORT=3000

# Configuración de Seguridad
JWT_SECRET=your-secret-key-change-this
SESSION_TIMEOUT=900

# Configuración de la Base de Datos
DB_PATH=./data/blast.db
